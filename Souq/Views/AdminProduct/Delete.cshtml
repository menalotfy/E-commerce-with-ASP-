@model Souq.Models.MyClasses.Product
@{
    ViewBag.Title = "Delete";
}

<h3 style="color:red; text-align:center;margin-top:50px">Are you sure you want to delete this?</h3>

<div class="container" style="margin-top:100px">
    <div class="row">

        <div class="col-md-2  p-1">Product Name</div>
        <div class="col-md-10 p-1" style="font-weight:bold; color:indigo">
            <div> @Html.DisplayFor(model => model.ProductName)</div>
        </div>

        <div class="col-md-2  p-1">Product Price</div>
        <div class="col-md-10 p-1" style="font-weight:bold; color:indigo">
            <div> @Html.DisplayFor(model => model.ProductPrice)</div>
        </div>

        <div class="col-md-2 p-1">Product Quantity</div>
        <div class="col-md-10 p-1" style="font-weight:bold; color:indigo">
            <div> @Html.DisplayFor(model => model.ProductQuantity)</div>
        </div>

        <div class="col-md-2 p-1">Product Discount</div>
        <div class="col-md-10 p-1" style="font-weight:bold; color:indigo">
            <div> @Html.DisplayFor(model => model.ProductDiscount)</div>
        </div>

        <div class="col-md-2 p-1">Product Image</div>
        <div class="col-md-10 p-1" style="font-weight:bold; color:indigo">
            <div> <img src="~/Images/@Model.ProductImage" width:100" height="100"></div>
        </div>
    </div>
</div>

<div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" style="margin:2px" />
            @Html.ActionLink("Cancel", "Index", "AdminProduct", null, new { @class = "btn btn-primary", style = "margin:2px" })

        </div>
    }
</div>