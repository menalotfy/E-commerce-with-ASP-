
@using Souq.businees;
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    
    <title>Cart</title>
</head>
<body>

    <h3>Cart Page</h3>
    <table class="table  table-bordered  table-hover" >
        <tr>

            <th>Id</th>
            <th>Name</th>
            <th>Photo</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Sub Total</th>
            <th>Option</th>
        </tr>
        @foreach (CartItem item in (List<CartItem>)Session["cart"])
        {
        <tr>
            <td>@item.Product.ID</td>
            <td>@item.Product.ProductName</td>
            <td><img src="~/Images/@item.Product.ProductImage" width="60" /> </td>
            <td>@item.Product.ProductPrice</td>
            <td> @item.Quantity </td>


            <td>
                 @(item.Product.ProductPrice * item.Quantity)
            </td>
            
            <td><a href="@Url.Action("Remove", "Cart", new { id = item.Product.ID })" class="btn btn-danger">Remove</a></td>

        </tr>
        }
        <tr>
            <td align="right" colspan="6">Sum</td>
            <td>
                @{
                    List<CartItem> cart = (List<CartItem>)Session["cart"];
                    var total = cart.Sum(item => item.Product.ProductPrice * item.Quantity);
                }
                @total
            </td>
        </tr>
    </table>
    <br>
    <a href="@Url.Action("Index", "Product")" class="btn btn-success">Continue Shopping</a>
    <script>
        
        

    </script>
</body>
</html>