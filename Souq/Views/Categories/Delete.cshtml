@model Souq.Models.MyClasses.Category

@{
    ViewBag.Title = "Delete";
}
<h3 style="color:red; text-align:center;margin-top:50px">Are you sure you want to delete this?</h3>
<div class="container" style="margin-top:100px">
    <div class="row">

        <div class="col-md-2  p-1">Category Name</div>
        <div class="col-md-10 p-1" style="font-weight:bold; color:indigo">
            <div> @Html.DisplayFor(model => model.CategoryName)</div>
        </div>

        <div class="col-md-2  p-1">Category Description</div>
        <div class="col-md-10 p-1" style="font-weight:bold; color:indigo">
            <div> @Html.DisplayFor(model => model.CategoryDescription)</div>
        </div>
    </div>
</div>
    <div style="margin-top:20px">
            
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" style="margin:2px" />
            @Html.ActionLink("Cancel", "Index", "Categories", null, new { @class = "btn btn-primary", style = "margin:2px" })
        </div>
        }
    </div>
