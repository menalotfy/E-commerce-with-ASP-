                        <li class="nav-item">
                            <a class="nav-link" href="/Categories/Index">Category</a>
                        </li>
                        @*<li class="nav-item">
                            <a class="nav-link" href="/ApplicationUsers/Index">Cus</a>
                        </li>*@
                    }
                    else if (this.User.IsInRole("Supplier"))
                    {


                        <li class="nav-item">
                            <a class="nav-link" href="/Supplier/Index">Products</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="#">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Product/Index">Product</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="#">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Contact</a>
                        </li>
                    }
                }



            </ul>
   
               @Html.Partial("_LoginPartial")
            
            
        </div>
    </nav>










