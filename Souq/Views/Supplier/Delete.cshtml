@model Souq.Models.MyClasses.Product
@{
    ViewBag.Title = "Delete";
}



<form method="post">
    <table class="table table-bordered" style="text-align:center; margin-top:50px">
        <tr style="background-color:grey">
            <td>Name</td>
            <td>Price</td>
            <td>Quantity</td>
            <td>Discount</td>
            <td>Image</td>
        </tr>
        <tr>
            <td>@Model.ProductName</td>
            <td>@Model.ProductPrice</td>
            <td>@Model.ProductQuantity</td>
            <td>@Model.ProductDiscount</td>
            <td><img src="~/Images/@Model.ProductImage" width:100" height="100"></td>
        </tr>

    </table>
    <input type="submit" value="Save" class="btn btn-success" />
</form>