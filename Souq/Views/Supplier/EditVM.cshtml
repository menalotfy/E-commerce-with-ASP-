@model Souq.ViewModels.ProductMetaDataVM

@{
    ViewBag.Title = "EditVM";
}

@using (Html.BeginForm("EditVM", "Supplier", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="container" style="margin-top:100px">
        <div class="row">


            <div class="col-md-1 col-sm-2 p-1">
                Categrory
            </div>
            <div class="col-md-3 col-sm-4 p-1">
                <div>
                    @Html.DropDownListFor(model => model.Category_ID, new SelectList(Model.categories, "ID", "CategoryName"), new { @class = "form-control" })
                </div>
            </div>
            <div class="col-md-8 col-sm-1"></div>


            <div class="col-2">

            </div>
            <div class="col-10">
               
            </div>

            <div class="col-md-6 col-sm-2 p-1">
                <input type="file" name="image" id="image" />
            </div>
            <div class="col-md-6 col-sm-4 p-1">
                <img src="~/Images/@Model.ProductImage" width:150" height="200">
            </div>


            <div class="col-md-1 col-sm-2 p-1">
                Name
            </div>
            <div class="col-md-3 col-sm-4 p-1">
                <div>
                    @Html.EditorFor(a => a.ProductName,
               new { htmlAttributes = new { @class = "form-control", autocomplete="off" } })
                </div>
            </div>
            <div class="col-md-8 col-sm-1">
                @Html.ValidationMessageFor(s => s.ProductName, null,
               new { style = "dispaly:block;font-size:20px;position: absolute;top: 10px ",
                   @class = "text-danger"
               })

            </div>

            <div class="col-md-1 col-sm-2 p-1">
                Price
            </div>
            <div class="col-md-3 col-sm-4 p-1">
                <div>
                    @Html.EditorFor(a => a.ProductPrice,
               new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
                </div>
            </div>
            <div class="col-md-8 col-sm-1">
                @Html.ValidationMessageFor(s => s.ProductPrice, null,
               new { style = "dispaly:block;font-size:20px;position: absolute;top: 14px ",
                   @class = "text-danger" })
            </div>


            <div class="col-md-1 col-sm-2 p-1">
                Quantity
            </div>
            <div class="col-md-3 col-sm-4 p-1">
                <div>@Html.EditorFor(a => a.ProductQuantity, new { htmlAttributes = new { @class = "form-control" } })</div>
            </div>
            <div class="col-md-8 col-sm-1">
                @Html.ValidationMessageFor(a => a.ProductQuantity, null,
               new { style = "dispaly:block;font-size:20px;position: absolute;top: 14px ",
                   @class = "text-danger" })

            </div>


            <div class="col-md-1 col-sm-2 p-1">
                Discount
            </div>
            <div class="col-md-3 col-sm-4 p-1">
                <div>
                    @Html.EditorFor(a => a.ProductDiscount,
               new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
                </div>
            </div>
            <div class="col-md-8 col-sm-1">
                @Html.ValidationMessageFor(s => s.ProductDiscount, null,
               new { style = "dispaly:block;font-size:20px;position: absolute;top: 14px ",
                   @class = "text-danger" })

            </div>

            <div class="col-md-3 col-sm-4 p-1">
                <input type="submit" value="Save" class="btn btn-success" />
                @Html.ActionLink("Back", "Index", "Supplier", null, new { @class = "btn btn-primary", style = "margin:2px;" })

            </div>
        </div>
    </div>
}


@section scripts {
    @Scripts.Render("~/bundles/jqueryval");
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
}