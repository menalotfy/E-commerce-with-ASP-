<form class="example" action="/Supplier/Search" style="margin:auto;max-width:300px; padding:20px; margin-top:100px">
    <input type="text" placeholder="Search.." name="ProductName" autocomplete="off">
    <button type="submit"><i class="fa fa-search"></i></button>
</form>

@Html.ActionLink("Add Product", "Add", "Supplier", null, new { @class = "btn btn-success", style = "margin:2px" })


<table class="table table-bordered" style="text-align:center">
    <tr style="background-color:grey">
        <td>Name</td>
        <td>Price</td>
        <td>Quantity</td>
        <td>Discount</td>
        <td>Category</td>
        <td>Image</td>
        <td>Options</td>
    </tr>
    @foreach (var item in Model)
    {

        <tr>
            <td>@item.ProductName</td>
            <td>@item.ProductPrice</td>
            <td>@item.ProductQuantity</td>
            <td>@item.ProductDiscount</td>
            <td>@item.Category.CategoryName</td>
            <td><img src="~/Images/@item.ProductImage" width:100" height="100"></td>
            <td>
                <a href="/Supplier/EditVM/@item.ID" class="btn btn-primary" style="margin:2px">Edit</a>
                <a href="/Supplier/Delete/@item.ID" class="btn btn-danger" style="margin:2px">Delete</a>
            </td>
        </tr>

    }

</table>
@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))

